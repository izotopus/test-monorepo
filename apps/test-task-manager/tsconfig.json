{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/ui": ["../../packages/ui/src/index.ts"],
      "@shared/ui/*": ["../../packages/ui/src/*"],
      "@shared/logic": ["../../packages/logic/src/index.ts"],
      "@shared/logic/*": ["../../packages/logic/src/*"],
      "@shared/locales": ["../../packages/locales/src/index.ts"],
      "@shared/locales/*": ["../../packages/locales/src/*"],
      "@shared/types": ["../../packages/types/src/index.ts"],
      "@shared/types/*": ["../../packages/types/src/*"]
    }
  },
  "include": ["src/**/*", "../../packages/*/src/**/*", "../../packages/logic/src/microfrontends/communication-bridge.ts"]
}
