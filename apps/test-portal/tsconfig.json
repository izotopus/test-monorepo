{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "baseUrl": ".",
    "paths": {
      "@shared/locales": ["../../packages/locales/src/index.ts"],
      "@shared/locales/*": ["../../packages/locales/src/*"],
      "@shared/types": ["../../packages/types/src/index.ts"],
      "@shared/types/*": ["../../packages/types/src/*"],
      "@shared/logic/*": ["../../packages/logic/src/*"],
      "@shared/logic": ["../../packages/logic/src/index.ts"],
      "@shared/ui/*": ["../../packages/ui/*"],
      "@shared/ui": ["../../packages/ui"],
      "@apps/*": ["../*"],
      "@portal/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@scripts/*": ["src/scripts/*"],
      "@styles/*": ["src/styles/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@content/*": ["src/content/*"]
    }
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}