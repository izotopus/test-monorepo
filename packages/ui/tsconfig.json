{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "baseUrl": ".",
    "paths": {
      "@shared/locales": ["../locales/src/index.ts"],
      "@shared/locales/*": ["../locales/src/*"],
      "@shared/types": ["../types/src/index.ts"],
      "@shared/types/*": ["../types/src/*"],
      "@shared/logic": ["../logic/src/index.ts"],
      "@shared/logic/*": ["../logic/src/*"],
      "@shared/ui/*": ["./src/*"]
    }
  }
}